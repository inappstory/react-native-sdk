{
    "quoteProps": "consistent",
    "printWidth": 120,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": true,
    "tabWidth": 4,
    "jsxBracketSameLine": false,
    "endOfLine": "lf",
    "singleQuote": false,
    "overrides": [
        {
            "files": "*.{css,scss}",
            "options": {
                "singleQuote": false
            }
        }
    ],
    "importOrder": [
        "app/**",
        "pages/*/**",
        "features/*/**",
        "entities/*/**",
        "shared/*/*/**",
        "../**/app",
        "../**/pages",
        "../**/features",
        "../**/entities",
        "../**/shared"
    ]
}
